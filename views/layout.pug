doctype html
html
    head
        block head
            title #{title}
            link(rel='stylesheet' href='/stylesheets/reset.css')
            link(rel='stylesheet' href='/stylesheets/index.css')
            link(rel="preconnect" href="https://fonts.googleapis.com")
            link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
            link(href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;700;800&display=swap" rel="stylesheet")
            link(href="https://fonts.googleapis.com/css2?family=Pirata+One&display=swap" rel="stylesheet")
            link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")

    body
        div.content-container
            nav.navbar
                div.nav-item
                    a(href='/')
                        img.navbar-logo(src="../images/horrorhost-logo-web.png", alt="horrorhost logo")
                div.nav-item
                    a.nav-link.page-link(href='/movies') Movies
                if locals.authenticated
                    div.nav-item
                        a(href=`/users/${locals.user.id}`) Welcome #{locals.user.username}!
                    div.nav-item
                        form(action="/users/logout" method="post")
                            button.med-button(type="submit") Logout
                else
                    div.nav-item
                        a.nav-link.login-link(href="/users/login") Login
                    div.nav-item
                        a.nav-link.register-link(href="/users/register") Register
            block content
